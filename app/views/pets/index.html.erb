<h1>Pets#index</h1>
<p>Find me in app/views/pets/index.html.erb</p>

<% @pets.each do |pet| %>
  <p><%= link_to pet.name, pet_path(pet) %></p>
  <p><%= pet.race %></p>
  <p><%= pet.founded %></p>
  <p><%= link_to 'Delete', pet_path(pet), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %></p>

<% end %>

<%= link_to 'Add a pet i found', new_pet_path %>
